                       HorizontalAlignment="{Binding HorAlign,UpdateSourceTrigger=PropertyChanged}" 
                       VerticalAlignment="{Binding VerAlign,UpdateSourceTrigger=PropertyChanged}"
                       Text="{Binding Text,UpdateSourceTrigger=PropertyChanged}"
